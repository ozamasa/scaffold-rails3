<%= pagetitle %>
<%= flash_tag %>

<%= search_tag %>

<div class="row">
  <div class="col-lg-12">
    <%= counter_tag %>
    <%= paginate_tag @users %>
    <%= csv_button_tag %>
    <%= new_button_tag %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%=hlabel :user, :account %><%= sort_tag('account') %></th>
      <th><%=hlabel :user, :name %><%= sort_tag('name')%></th>
      <th><%=hlabel :commons, :updated_at %><%= sort_tag('updated')%></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%=link_to user.account, action: :show, id: user.id %></td>
      <td><%=link_to user.name, action: :show, id: user.id %></td>
      <td nowrap><%=hdatetime user.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

<%= upload_tag %>
