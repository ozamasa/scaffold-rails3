<div class="well">
<%= required_notice_tag %>
<%= form_for @sample, html: {class: "bs-example form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :id, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= h @sample.id %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: "col-lg-2 control-label required" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control" unless show? %>
        <%= h @sample.name if show? %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :kana, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :kana, class: "form-control" unless show? %>
        <%= h @sample.kana if show? %>
      </div>
    </div>

    <div class="form-actions col-lg-offset-2">
<%= submit_button_tag %>
<%= index_button_tag %>
<%= delete_button_tag @sample if show? %>
    </div>
  </fieldset>
<% end %>
</div>
