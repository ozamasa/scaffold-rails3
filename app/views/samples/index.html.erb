<%= pagetitle %>
<%= flash_tag %>

<%= search_tag :other => search_check_tag("checkstop", :companies_path, "非表示もすべて表示" ) %>

<div class="row">
  <div class="col-lg-12">
    <%= counter_tag %>
    <%= paginate_tag @samples %>
    <%= csv_button_tag %>
    <%= report_button_tag %>
    <%= new_button_tag %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%=hlabel :sample, :id   %><%= sort_tag('id') %></th>
      <th><%=hlabel :sample, :name %><%= sort_tag('name')%></th>
      <th><%=hlabel :sample, :kana %><%= sort_tag('kana')%></th>
      <th><%=hlabel :sample, :url  %><%= sort_tag('url')%></th>
      <th><%=hlabel :commons, :updated_at %><%= sort_tag('updated')%></th>
    </tr>
  </thead>
  <tbody>
  <% @samples.each do |sample| %>
    <tr>
      <td><%=link_to sample.id,   action: :show, id: sample.id %></td>
      <td><%=link_to sample.name, action: :show, id: sample.id %></td>
      <td><%=h sample.kana %></td>
      <td><%=h sample.url  %></td>
      <td nowrap><%=hdatetime sample.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

<%= upload_tag %>
